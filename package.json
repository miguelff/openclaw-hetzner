  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "dotenv-cli": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@pulumi/hcloud": "^1.0.0",
    "@pulumi/pulumi": "^3.0.0",
    "@pulumi/tls": "^5.0.0"
  }
}
