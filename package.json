{
  "name": "openclaw-hetzner",
  "version": "1.0.0",
  "description": "Deploy OpenClaw to Hetzner Cloud with Tailscale",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "deploy": "dotenv -- pulumi up",
